{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "types": ["node", "mocha"],
    "declaration": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
